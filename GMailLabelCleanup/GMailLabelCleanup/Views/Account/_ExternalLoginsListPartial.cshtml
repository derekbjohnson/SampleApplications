@model GMailLabelCleanup.Core.ViewModels.Account.ExternalLoginListViewModel
@using Microsoft.Owin.Security

<hr />
@{
    //The only one.
    var googleAuthType = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes().First();        

    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <div id="socialLoginList">
            <p>
                <button type="submit" class="btn btn-google" id="@googleAuthType.AuthenticationType" name="provider" value="@googleAuthType.AuthenticationType" title="Log in using your @googleAuthType.Caption account" />
            </p>
        </div>
    }
}
